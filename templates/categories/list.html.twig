{% extends 'base.html.twig' %}

{% block title %}Liste des produits de la categorie {{category.slug}} {% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Liste des produits de la categorie {{category.name}}</h1>                
            </div>
            {% if products is empty %}
                <h3 class="alert alert-danger" role="alert">Oups pas de produit disponible</h3>                
            {% else %}
                {% for product in products.data %}            
                    <div class="col-3 mb-3">
                        <article class="card h-100">
                            <img src="{{ asset('assets/uploads/products/mini/300x300-' ~ product.images[0].name )}}" class="card-img-top" alt="product.name" />
                            <div class="card-body">
                                <h2 class="card-title">{{product.name}}</h2>
                                <p class="card-text">{{product.description}}</p>                      
                                <a href="{{ path('products_details', {"slug": product.slug})}}" class="btn btn-primary">Voir les d√©tails</a>
                            </div>
                        </article>                
                    </div>                           
                {% endfor %}              
            {% set path = 'categories_list' %}
            {% set slug = category.slug %}
            {% set pages = products.pages %}
            {% set currentPage = products.page %}
            {% include "_partials/_pagination.html.twig" %}
            {% endif %}        
        </section>  
    </main>





{% endblock %}